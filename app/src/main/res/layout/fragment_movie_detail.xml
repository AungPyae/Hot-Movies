<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />

        <variable
            name="movie"
            type="net.aung.popularmovies.data.vos.MovieVO" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/iv_backdrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="@color/black_transparent_overlay"
                android:scaleType="centerCrop"
                app:imageUrl="@{movie.backdropPath}"
                tools:src="@drawable/movie_backdrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="@dimen/margin_medium"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/fl_container_poster"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:elevation="@dimen/poster_elevation">

                    <ImageView
                        android:id="@+id/iv_poster"
                        android:layout_width="@dimen/item_movie_width"
                        android:layout_height="@dimen/item_movie_height"
                        android:layout_marginLeft="@dimen/margin_medium_2"
                        android:layout_marginTop="@dimen/margin_medium_2"
                        android:layout_marginBottom="@dimen/margin_medium_2"
                        tools:src="@drawable/movie_poster" />

                    <net.aung.popularmovies.views.components.textview.LobsterRegularTextView
                        android:id="@+id/tv_rating"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="@dimen/margin_small"
                        android:background="@drawable/movie_rating_bg"
                        android:gravity="center"
                        android:text="@{movie.voteAverage}"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/text_regular_3x"
                        tools:text="6.2" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_medium"
                        android:layout_marginTop="@dimen/margin_large"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@color/text_white"
                        android:textSize="@dimen/text_heading_1x"
                        android:text="@{movie.title}"
                        tools:text="Ant-Man" />

                    <ScrollView
                        android:id="@+id/sv_overview"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignLeft="@id/tv_title"
                        android:layout_below="@id/tv_title"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:paddingBottom="@dimen/margin_medium">

                        <TextView
                            android:id="@+id/tv_overview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/margin_medium_2"
                            android:fontFamily="sans-serif-condensed"
                            android:lineSpacingExtra="1.2dp"
                            android:textColor="@color/text_white"
                            android:textSize="@dimen/text_regular"
                            android:text="@{movie.overview}"
                            tools:text="Armed with the astonishing ability to shrink in scale but increase in strength, con-man Scott Lang must embrace his inner-hero and help his mentor, Dr. Hank Pym, protect the secret behind his spectacular Ant-Man suit from a new generation of towering threats. Against seemingly insurmountable obstacles, Pym and Lang must plan and pull off a heist that will save the world." />

                    </ScrollView>

                </RelativeLayout>

            </LinearLayout>

            <net.aung.popularmovies.views.pods.ViewPodMoviePopularity
                android:id="@+id/vp_movie_popularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/margin_medium"
                android:paddingBottom="@dimen/margin_medium_2" />

        </FrameLayout>

        <HorizontalScrollView
            android:id="@+id/hsv_container_trailer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/primary_dark">

            <LinearLayout
                android:id="@+id/ll_container_trailer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="@dimen/item_movie_height"
                    android:layout_height="@dimen/item_movie_width"
                    android:padding="@dimen/margin_medium"
                    >

                    <ImageView
                        android:id="@+id/iv_trailer_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#6600ddff"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/trailer_01"
                        />

                    <ImageView
                        android:id="@+id/iv_trailer_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_trailer_play"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="@dimen/item_movie_height"
                    android:layout_height="@dimen/item_movie_width"
                    android:padding="@dimen/margin_medium"
                    >

                    <ImageView
                        android:id="@+id/iv_trailer_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#6600ddff"
                        android:scaleType="centerCrop"
                        tools:src="@drawable/trailer_02"
                        />

                    <ImageView
                        android:id="@+id/iv_trailer_play"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/icon_trailer_play"/>

                </FrameLayout>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</layout>